{% layout "layout.liquid" %}
{% block content %}

    <h1>MY VILLAGERS SHOW.LIQUID</h1>
    <img src="{{ animoo.iconUrl }}" width="80" height="80">
    <img src="{{ animoo.imgUrl }}" width="80" height="80">
    <h1>NAME:{{ animoo.name }}</h1>
    <h1>BDAY:{{ animoo.birthday }}</h1>
    <h1>SPECIES{{ animoo.species }}</h1>
    <a href="/villagers/my_villagers/{{ animoo.id }}/edit" class="btn btn-primary">Edit</a>
    <form action="/villagers/my_villagers/{{animoo.id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>

    <div class="col-md-6">
        <form action="/note/villagers/my_villagers/{{ animoo.id }}" method="POST">
            <fieldset>
                <legend>Add Note</legend>
                <label class="form-label">Note: </label>
                <input type="text" class="form-control" name="body" placeholder="Add a note...">
            </fieldset>
            <input type="submit" class="btn btn-success" value="Add Note">
        </form>
    </div>
    

{% endblock %}