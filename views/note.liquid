{% block content %}
    <div class="card mb-4 shadow">
        <div class="card-body">
            <p>{{ text.body }}</p>
            <div class="d-flex justify-content-between">
                <small>author: {{ text.author.username }}</small>
                {% if text.author == userId %}
                    <form action="/comments/delete/{{ animoo.id }}/{{ text.id }}?_method=DELETE" method="POST">
                        <input type="submit" value="X">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}