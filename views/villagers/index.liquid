{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6"> All Villagers</h2>
    <div class="row">
        {% for animal in animalData limit:50 %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ animal["name"]["name-USen"] }}</h5>
            <a href="/villagers/{{ animal["id"]}}">
                <img src="{{ animal["icon_uri"] }}" width="80" height="80">
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}